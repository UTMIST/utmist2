{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@src/*": ["./src/*"],
      "@pages/*": ["./pages/*"],
      "@app/*": ["./app/*"],
      "@root/*": ["./app/(root)/*"],
      "@ai2/*": ["./app/common/ai2/*"],
      "@ai2components/*": ["./app/common/ai2/*"],
      "@/lib/*": ["./app/common/ai2/lib/*"],
	    "@assets/*": ["./public/assets/*"]
      "@schema/*": ["./app/schema/*"],
    }
  },

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
